#include <iostream>
using namespace std;

class DFSGraph {
public:
    int n;                  
    int adj[10][10];       
    int color[10];          // WHITE(0), GRAY(1), BLACK(2)
    int parent[10];
    int d[10], f[10];
    int Time;

    DFSGraph(int vertices) {
        n = vertices;
        Time = 0;

        for (int i = 0; i < n; i++) {
            color[i] = 0;      
            parent[i] = -1;
            for (int j = 0; j < n; j++)
                adj[i][j] = 0;
        }
    }

    void addEdge(int u, int v) {
        adj[u][v] = 1;
    }

    void DFS_VISIT(int u) {
        Time++;
        d[u] = Time;
        color[u] = 1; 

        for (int v = 0; v < n; v++) {
            if (adj[u][v] == 1 && color[v] == 0) {
                parent[v] = u;
                DFS_VISIT(v);
            }
        }

        color[u] = 2; 
        Time++;
        f[u] = Time;
    }

    void DFS() {
        Time = 0;

        for (int i = 0; i < n; i++) {
            color[i] = 0;   
            parent[i] = -1;
        }

        for (int u = 0; u < n; u++) {
            if (color[u] == 0) {
                DFS_VISIT(u);
            }
        }
    }

    void printTimes() {
        cout << "Vertex\start time\finish time\Parent\n";
        for (int i = 0; i < n; i++) {
            cout << i << "\t" << d[i] << "\t" << f[i] << "\t" << parent[i] << "\n";
        }
    }
};

int main() {
    DFSGraph g(5);

    g.addEdge(0, 1); // A -> B
    g.addEdge(0, 2); // A -> C
    g.addEdge(1, 3); // B -> D
    g.addEdge(1, 4); // B -> E

    g.DFS();
    g.printTimes();

    return 0;
}
